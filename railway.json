{
  "$schema": "https://railway.app/schema.json",
  "name": "hivemind",
  "description": "Decentralized AI Compute Network - Server",
  "repository": "https://github.com/kmsitecontruction-droid/hivemind",
  "buildCommand": "cd dist/server && npm install --production",
  "startCommand": "node index.js",
  "rootDirectory": "dist/server",
  "healthcheckPath": "/",
  "restartPolicyType": "ON_FAILURE",
  "restartPolicyMaxRetries": 5,
  "dockerfilePath": "Dockerfile",
  "deploy": {
    "replicas": 1,
    "memory": "512 MB",
    "cpu": "0.5 vCPU"
  },
  "env": {
    "PORT": "3001",
    "NODE_ENV": "production"
  }
}
